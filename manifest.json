{
  "manifest_version": 3,
  "name": "ProSk Final Level",
  "version": "1.3.0",
  "description": "Professional auto-fill assistant for job applications",
  "action": {},

  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "webNavigation"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js", "panel.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],

  "web_accessible_resources": [{
    "resources": ["injected.js", "panel-styles.css"],
    "matches": ["https://*/*", "http://*/*"]
  }],

  "minimum_chrome_version": "118"
}
