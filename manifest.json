{
  "manifest_version": 3,
  "name": "Universal Job Autofill",
  "version": "1.1.0",
  "action": { "default_popup": "popup.html" },

  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "webNavigation"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": true,
    "match_about_blank": true
  }],

  "minimum_chrome_version": "118"
}
