{
  "manifest_version": 3,
  "name": "ProSk Assist - Auto Apply Assistant",
  "version": "1.2.0",
  "description": "Professional auto-fill assistant for job applications",
  "action": { "default_popup": "popup.html" },

  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "webNavigation"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js", "panel.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],

  "minimum_chrome_version": "118"
}
